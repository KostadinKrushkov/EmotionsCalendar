<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>
    <style name="AppTheme.PopupTheme" >
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="NumberPickerThemeLight" parent="Theme.AppCompat.Light" >
        <item name="colorAccent">@android:color/white</item>
        <item name="colorControlNormal">@android:color/transparent</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:background">@color/colorDeadMainLight</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="NumberPickerThemeDark" parent="Theme.AppCompat.Light" >
        <item name="colorAccent">@android:color/white</item>
        <item name="colorControlNormal">@android:color/transparent</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:background">@color/colorDeadMainDark</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>
