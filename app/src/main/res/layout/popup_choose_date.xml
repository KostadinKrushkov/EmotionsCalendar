<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popupChooseDateRelativeLayout"
    android:layout_width="match_parent" android:layout_height="match_parent"
    >


    <TextView
        android:id="@+id/showPopupTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/numberPickerMonth"
        android:layout_alignParentStart="true"
        android:layout_marginStart="134dp"
        android:layout_marginTop="54dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/showPopupTextViewYears"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/numberPickerMonth"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="54dp"
        android:layout_marginEnd="103dp"
        android:text="TextView" />

    <NumberPicker
        android:id="@+id/numberPickerMonth"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="151dp"
        android:layout_marginEnd="30dp"
        android:theme="@style/NumberPickerTheme"

        />

    <NumberPicker
        android:id="@+id/numberPickerYear"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="148dp"
        android:layout_marginEnd="30dp"
        android:theme="@style/NumberPickerTheme" />


</RelativeLayout>